<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/ll_satu"
        android:layout_below="@id/ll_dua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_satu"
        android:background="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </Button>
        <Button
            android:id="@+id/btn_empat"
            android:background="@android:color/holo_blue_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_dua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <Button
        android:id="@+id/btn_dua"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </Button>
    <Button
        android:id="@+id/btn_tiga"
        android:layout_below="@id/btn_dua"
        android:layout_toRightOf="@id/btn_satu"
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </Button>
    </LinearLayout>
</RelativeLayout>